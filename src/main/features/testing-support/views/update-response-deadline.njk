{% extends "layout.njk" %}
{% from "includes/macros/form.njk" import textInput, csrfProtection, submitButton, errorSummary %}
{% from "includes/macros/date.njk" import dateInput %}

{% set title = 'Testing support' %}
{% set heading = t('Update response deadline') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post" novalidate>
        {{ csrfProtection(csrf) }}

        {{ textInput('Claim number', 'claimNumber', form) }}
        {{ dateInput('date', form) }}

        {{ submitButton() }}
      </form>
    </div>
  </div>
{% endblock %}
