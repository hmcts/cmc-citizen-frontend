        <div class="notice">
          {{ linkButton('Delete ccj drafts', 'action[ccj]', 'button button-secondary') }}
        </div>
        <div class="notice">
          {{ linkButton('Delete claimant response drafts', 'action[claimantResponse]', 'button button-secondary') }}
