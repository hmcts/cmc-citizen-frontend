        <div class="notice">
          {{ linkButton('Delete mediation drafts', 'action[mediation]', 'button button-secondary') }}
        </div>
        <div class="notice">
          {{ linkButton('Delete DQ drafts', 'action[directionsQuestionnaire]', 'button button-secondary') }}
