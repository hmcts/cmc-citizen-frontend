{% from "externalLink.njk" import externalLink %}

{% macro ccjRequestedForClaimantDashboard(claim) %}
  {{ t('You requested a County Court Judgment on {{ ccjRequestedAt }}.',
    { ccjRequestedAt: claim.countyCourtJudgmentRequestedAt | date }) }}
{% endmacro %}

{% macro ccjRequestedForClaimantClaimDetails(claim) %}
  <h2 class="heading-small">{{ t('You’ve requested a County Court Judgment (CCJ)') }}</h2>
  <p>
    {{ t('We’ll contact you within 14 days to tell you whether the judgment has been entered.') }}
  </p>
  <p>
    {{ t('{{ defendantName }} can no longer respond to your claim using this service - they may have responded by post.',
      { defendantName: claim.claimData.defendant.name }) }}
  </p>
{% endmacro %}

{% macro ccjRequestedForDefendantDashboard(claim) %}
  {{ t('{{ claimantName }} has requested a County Court Judgment against you.',
    { claimantName : claim.claimData.claimant.name }) }}
{% endmacro %}

{% macro ccjRequestedForDefendantClaimDetails(claim) %}
  <h2 class="heading-small">{{ t('A County Court Judgment (CCJ) has been issued against you') }}</h2>

  <p>{{ t('{{ claimantName }} accepted your repayment plan and requested a CCJ against you.',
      { claimantName: claim.claimData.claimant.name }) }}</p>

  <p>{{ t('If a defendant doesn’t pay immediately, claimants can request a CCJ even if they accept a repayment plan.') }}</p>

  <p>
    <a href="{{ DashboardPaths.contactThemPage.evaluateUri({ externalId: claim.externalId }) }}">{{
      t('Contact {{ claimantName }}', { claimantName: claim.claimData.claimant.name }) }}</a>{{
      t(' if you need their payment details. Make sure you get receipts for any payments.')
    }}
  </p>

  <p>{{ t('The judgment sets out the terms of how you must pay.') }}</p>

  <p>{{ t('View the judgment') }} {{ t(' (PDF)') }}</p>

  <p>{{
    t('If you repay the debt within 28 days you can ')
  }}<a href="https://hmctsformfinder.justice.gov.uk/HMCTS/GetForm.do?court_forms_id=1157">{{
    t('apply for a certificate of cancellation')
  }}</a>{{
    t(' to cancel the CCJ. This application costs £15.')
  }}</p>
{% endmacro %}
