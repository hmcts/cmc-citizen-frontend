{% extends "layout.njk" %}
{% from "./macro/caseHistory.njk" import caseHistoryForClaimant %}

{% set title = 'Your money claims account' %}

{% from "form.njk" import submitButton, csrfProtection %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large">
        <span class="heading-secondary">{{ t('Claim number:') }}</span>
        {{ claim.claimNumber }}
      </h1>
      <div>
        <h2 class="heading-medium">{{ t('Claim status') }}</h2>

        {{ caseHistoryForClaimant(claim, DashboardUrlHelper.getStatusUrl(claim)) }}
      </div>
    </div>

    <div class="column-one-third">
      <div class="about-claim-widget">
        <p class="heading-small">{{ t('About claim') }}</p>
        <ul class="font-xsmall list">
          <li>
            <strong class="bold">{{ t('Defendant name:') }}</strong>
            <span class="block">{{ claim.claimData.defendant.name }}</span>
          </li>
          <li>
            <strong class="bold">{{ t('Total claim amount:') }}</strong>
            <span class="block">{{ claim.totalAmountTillToday | numeral }}</span>
          </li>
          <li>
            <strong class="bold">{{ t('Claim details:') }}</strong>
            <span class="block"><a href="{{ ClaimPaths.receiptReceiver.evaluateUri({ externalId: claim.externalId }) }}">{{ t('Download claim') }}</a></span>
          </li>
          {% if claim.response %}
            <li>
              <strong class="bold">{{ t('Defendantâ€™s response:') }}</strong>
              <span class="block"><a href="{{ ResponsePaths.receiptReceiver.evaluateUri({ externalId: claim.externalId }) }}">{{ t('Download response') }}</a></span>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
{% endblock %}
