{% extends "layout.njk" %}
{% from "./macro/caseHistory.njk" import caseHistoryForDefendant %}

{% set title = t('Your money claims account') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large">
        <span class="heading-secondary">{{ t('Claim number:') }}</span>
        {{ claim.claimNumber }}
      </h1>
      <h2 class="heading-medium">{{ t('Claim status') }}</h2>
      {{ caseHistoryForDefendant(claim, DashboardUrlHelper.getStatusUrl(claim), isAfter4pm) }}

      {% if featureToggles.offer and claim.status === ClaimStatus.CLAIM_REJECTED %}
        <h2 class="heading-medium">{{ t('More options') }}</h2>
        <h3 class="heading-small">{{ t('Settle out of court') }}</h3>
        <p>
          {{ t('You can still <a href="{{ makeOfferUri }}">make an offer</a> to settle the claim out of court. You will avoid a hearing and a County Court Judgment against you.',
            { makeOfferUri : OfferPaths.offerPage.evaluateUri({ externalId: claim.externalId }) }) | safe }}
        </p>
      {% endif %}
    </div>

    <div class="column-one-third">
      <div class="about-claim-widget">
        <p class="heading-small">{{ t('About claim') }}</p>
        <ul class="font-xsmall list">
          <li>
            <strong class="bold">{{ t('Claimant name:') }}</strong>
            <span class="block">{{ claim.claimData.claimant.name }}</span>
          </li>
          <li>
            <strong class="bold">{{ t('Claim amount:') }}</strong>
            <span class="block">{{ claim.totalAmountTillToday | numeral }}</span>
          </li>
          <li>
            <strong class="bold">{{ t('Claim details:') }}</strong>
            <span class="block"><a href="{{ DashboardPaths.claimReceiptReceiver.evaluateUri({ externalId: claim.externalId }) }}">{{ t('Download claim') }}</a></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
{% endblock %}
