{% extends "layout.njk" %}
{% from "./macro/caseHistory.njk" import caseHistoryForDefendantClaimDetails %}

{% set title = t('Your money claims account') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large">
        <span class="heading-secondary">{{ t('Claim number:') }}</span>
        {{ claim.claimNumber }}
      </h1>
      <h2 class="heading-medium">{{ t('Claim status') }}</h2>
      {{ caseHistoryForDefendantClaimDetails(claim, DashboardUrlHelper.getStatusUrl(claim)) }}
    </div>

    <div class="column-one-third">
      <div class="about-claim-widget">
        <p class="heading-small">{{ t('About claim') }}</p>
        <ul class="font-xsmall list">
          <li>
            <strong class="bold">{{ t('Claimant name:') }}</strong>
            <span class="block">{{ claim.claimData.claimant.name }}</span>
          </li>
          <li>
            <strong class="bold">{{ t('Claim amount:') }}</strong>
            <span class="block">{{ claim.totalAmountTillToday | numeral }}</span>
          </li>
          <li>
            <strong class="bold">{{ t('Claim details:') }}</strong>
            <span class="block"><a href="{{ ResponsePaths.claimDetailsPage.evaluateUri({ externalId: claim.externalId }) }}">{{ t('View claim') }}</a></span>
          </li>
          {% if claim.response %}
          <li>
            <strong class="bold">{{ t('Your response:') }}</strong>
            <span class="block"><a href="{{ ResponsePaths.receiptReceiver.evaluateUri({ externalId: claim.externalId }) }}">{{ t('Download response') }}</a></span>
          </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
{% endblock %}
