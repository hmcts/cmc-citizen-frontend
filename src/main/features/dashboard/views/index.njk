{% extends "layout.njk" %}
{% from "form.njk" import submitButton, errorSummary %}
{% from "timeRemaining.njk" import timeRemaining %}
{% from "support.njk" import supportWidget %}

{% set title = 'Money claim' %}

{% block content %}
  <div class="grid-row">
    <div class="column-full">
      <h1 class="heading-large">{{ t('Your money claims account') }}</h1>
        {% if not claimDraftSaved %}
          <a id="start-now" class="newclaim" href="{{ paths.claimStartPage.uri }}">{{ t('Make a new money claim') }}</a>
        {% endif %}

    {% if claimsAsClaimant | length or claimDraftSaved %}

        <h2 class="heading-medium"> {{ t('Claims youâ€™ve made or are in progress') }}</h2>
        <table class="claim-dashboard">
          <thead>
          <tr>
            <th scope="col">{{ t('Claim number') }}</th>
            <th scope="col">{{ t('Defendant name') }}</th>
            <th scope="col">{{ t('Claim amount') }}</th>

            <th scope="col" class="mobile-hide">{{ t('Status') }}</th>
          </tr>
          </thead>
          <tbody>
          {% if claimDraftSaved %}
            <tr class="draft mobile-table">
              <td><a href="{{ paths.claimTaskListPage.uri }}">{{ t('Draft claim') }}</a></td>
              <td>-</td>

              <td>-</td>
              <td class="mobile-hide">
                <a href="{{ paths.claimTaskListPage.uri }}">{{ t('Continue with claim') }}</a>
              </td>
            </tr>
            <tr>
              <td colspan="3" class="mobile-table-status">
                {{ t('Status: ') }}<a href="{{ paths.claimTaskListPage.uri }}">{{ t('Continue with claim') }}</a>
              </td>
            </tr>
          {% endif %}
          {% for claim in claimsAsClaimant %}
            {% if claim.eligibleForCCJ %}
              {% set status = t('Request a County Court Judgment.') %}
            {% elseif claim.countyCourtJudgmentRequestedAt %}
              {% set status =
              t('You requested a County Court Judgment on %s. We will contact you within 5 days.',
              { postProcess: 'sprintf', sprintf: [ claim.countyCourtJudgmentRequestedAt | date ]})
              %}
            {% elseif claim.settlement %}
              {% set status =
              t('%s wants to settle out of court. View <a href="%s">their offer</a>.',
              { postProcess: 'sprintf', 
              sprintf: 
                      [ claim.claimData.defendant.name,  
                        offerPaths.responsePage.evaluateUri({ externalId: claim.externalId })
                      ]
              }) | safe%}  
            {% else %}
              {% set status = t('Your claim is being processed. We will email you to explain what to do next.') %}
            {% endif %}


            <tr class="claims default mobile-table">
              <td><a href="/dashboard/{{ claim.externalId }}/claimant">{{ claim.claimNumber }}</a></td>
              <td>{{ claim.claimData.defendant.name }}</td>
              <td>{{ claim.totalAmount | numeral }}</td>
              <td class="mobile-hide">{{ status }}</td>
            </tr>
            <tr><td colspan="3" class="mobile-table-status">{{ t('Status: ') + status }}</td></tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    {% endif %}

    {% if claimsAsDefendant | length or responseDraftSaved %}
      <div class="column-full">
        <h2 class="heading-medium"> {{ t('Claims made against you') }}</h2>
        <table class="claim-dashboard">
          <thead>
          <tr class="mobile-table">
            <th scope="col">{{ t('Claim number') }}</th>
            <th scope="col">{{ t('Claimant name') }}</th>
            <th scope="col">{{ t('Claim amount') }}</th>

            <th scope="col" class="mobile-hide">{{ t('Status') }}</th>
          </tr>
          </thead>
          <tbody>
          {% if responseDraftSaved %}
            <tr class="draft mobile-table">
              <td><a href="{{ paths.responseTaskListPage.uri }}">Draft response</a></td>
              <td>-</td>

              <td>-</td>
              <td>In progress</td>
            </tr>
          {% endif %}
          {% for claim in claimsAsDefendant %}
            {% if claim.respondedAt or claim.countyCourtJudgmentRequestedAt %}
              {% set url = paths.defendantPage.evaluateUri({ externalId: claim.externalId }) %}
            {% else %}
              {% set url =  paths.responseTaskListPage.evaluateUri({ externalId: claim.externalId }) %}
            {% endif %}

            {% if claim.respondedAt %}
              {% set status = t('Your response is being processed. We will email you to explain what to do next.') %}
            {% elseif claim.countyCourtJudgmentRequestedAt %}
              {% set status =
              t('%s requested a County Court Judgment against you on %s. We will contact you both within 5 days.',
              { postProcess: 'sprintf', sprintf: [ claim.claimData.claimant.name, claim.countyCourtJudgmentRequestedAt | date ]})
              %}
            {% else %}
              {% set status %}
                {{ t('<a href="%s">Respond to claim</a>', { postProcess: 'sprintf', sprintf: [url] }) | safe }}
                <span class="block mobile-inline">
                  {{ timeRemaining(claim.remainingDays, isAfter4pm) }}
                </span>
              {% endset %}
            {% endif %}

            <tr class="mobile-table">
              <td><a href="{{ url }}">{{ claim.claimNumber }}</a></td>
              <td>{{ claim.claimData.claimant.name }}</td>
              <td>{{ claim.totalAmount | numeral }}</td>
              <td class="mobile-hide">{{ status | safe }}</td>
            </tr>
            <tr>
              <td colspan="3" class="mobile-table-status">{{ t('Status: ') }}{{ status | safe }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
    {% endif %}
      </div>
  </div>
{% endblock %}
