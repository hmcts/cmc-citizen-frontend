{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, submitButton, errorSummary, textArea %}
{% from "date.njk" import dateInput %}
{% set heading = t("Make an offer") %}
{% set title = t('Money claim') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="description-block">
        <h4 class="heading-small"> {{ t('Your offer') }}</h4>
      </div>

      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {{ textArea(hint= t("For example a payment, fix a problem or return goods."), name='content', form = form, rows = 10) }}

        <div class="description-block">
          <h4 class="heading-small"> {{ t('Completion date') }}</h4>
          <p>{{ t('When will you pay in full or complete your offer?') }}</p>
        </div>

        {{ dateInput(form = form, name = 'completionDate', hint = t('For example, 23 04 2017')) }}

        <div class="panel panel-border-wide">
          <p>
            {{ t("%s can accept, reject or make a counter offer.",
            {
              postProcess: 'sprintf',
              sprintf: [claim.claimData.claimant.name]
            }
            )
            }}
          </p>
        </div>
        {{ submitButton('Submit offer') }}
      </form>
    </div>
  </div>
{% endblock %}
