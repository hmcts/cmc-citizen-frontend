{% extends "layout.njk" %}
{% from "support.njk" import supportWidget %}

{% set title = t('Money claim | Claim settled - confirmation page') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="govuk-box-highlight">
        <h1 class="bold-large">{{ t('You’ve settled out of court') }}</h1>
        <br />
        <p>
          <strong class="bold">{{ claim.settlementReachedAt | date }}</strong>
        </p>
        <p class="issue-receipt-download">
          <a href="{{ OfferPaths.agreementReceiver.evaluateUri({ externalId: claim.externalId }) }}">{{ t('Download agreement as a PDF') }}</a>
        </p>
      </div>

      <h2 class="heading-medium">{{ t('What happens next') }}</h2>
      <p>
        {{ t('You’ve both signed a legal agreement which replaces the claim.') }}
      </p>

      {% include "includes/service_survey_link.njk" %}

      <a href="{{ DashboardPaths.defendantPage.evaluateUri({ externalId: claim.externalId }) }}" class="button">Finished</a>

      {{ supportWidget() }}

    </div>
  </div>
{% endblock %}
