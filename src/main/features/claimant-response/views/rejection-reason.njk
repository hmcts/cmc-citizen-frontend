{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary, textArea %}

{% set heading = 'Why did you reject the repayment plan?' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        <p> {{ t('Explain why you believe the defendant can afford to pay more or to pay sooner.') }} </p>

        {{ textArea(name = 'text', form = form) }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
