    <div class="column-two-thirds">
      <form method="post" class="analytics-submit-event-trigger"
            data-event-label-from="option"
            novalidate>
        {{ csrfProtection(csrf) }}

        {{
        radioGroup(
          label = "There are two ways to formalise the repayment plan:",
          name = "option",
          options = [
          {
            label: "signSettlementAgreement",
            value: "yes",
            hint: 'test',
            bold: true
          },
          {
            label: 'No, I donâ€™t need more time',
            value: "no",
            bold: true
          }
        ],
          form = form,
          legendHidden = true
        )
        }}
        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}


