{% macro paymentPlanTable(id, instalmentAmount, firstPaymentDate, lastPaymentOn, lengthOfPayment) %}
  <fieldset id="{{ id }}" class="form-group">
    <legend>
      <span class="visually-hidden">{{ t( 'Payment plan' ) }}</span>
    </legend>
    {{ row('Monthly installment of', instalmentAmount | numeral) }}
    {{ row('Make the first payment on', firstPaymentDate | date) }}
    {{ row('Last payment on', lastPaymentOn | date) }}
    {{ row('Length of repayment plan', lengthOfPayment) }}
  </fieldset>
{% endmacro %}

{% macro row(label, value, bottomBorder = true, bold = false, topBorder = false) %}
  <div class="{% if topBorder %}top-border {% endif %} {% if bottomBorder %} bottom-border{% endif %}">
    <div class="column-one-half  {% if not label %}if-empty{% endif %}">
      <span {% if bold %}class="form-label-bold"{% endif %}>{{ t( label ) }}</span>
    </div>
    <div class="column-one-half {% if not value %}if-empty{% endif %}">
      <span>{{ value }}</span>
    </div>
  </div>
{% endmacro %}
