{% from "./paymentPlanTable.njk" import paymentPlanTable %}

{% macro repaymentPlanBlock(heading, paymentPlan) %}
  {% if heading %}
    <h2 class="heading-medium">{{ t(heading) }}</h2>
  {% endif %}

  {{ paymentPlanTable(
    id = 'payment-table',
    instalmentAmount = paymentPlan.instalmentAmount,
    paymentSchedule = paymentPlan.frequency,
    firstPaymentDate = paymentPlan.startDate,
    lastPaymentOn = paymentPlan.calculateLastPaymentDate(),
    lengthOfPayment = paymentPlan.calculatePaymentLength()
  )
  }}
{% endmacro %}
