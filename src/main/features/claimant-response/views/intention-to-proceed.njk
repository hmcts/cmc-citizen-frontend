{% extends "layout.njk" %}

{% from "form.njk" import csrfProtection, radioGroup, saveAndContinueButton, errorSummary %}

{% set heading = 'Do you want to proceed with the claim?' %}

{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post"
            data-event-action="Claimant: Choose intention to proceed"
            class="analytics-submit-event-trigger"
            data-event-label-from="option"
            novalidate>
        {{ csrfProtection(csrf) }}

        {{
        radioGroup(
          label ='Do you want to proceed with the claim?',
          name = 'proceed',
          options = [
          {'label': 'Yes', value: YesNoOption.YES.option, checked: (form.valueFor('proceed') === YesNoOption.YES)},
          {'label': 'No', value: YesNoOption.NO.option, checked: (form.valueFor('proceed') === YesNoOption.NO)}
        ],
          form = form,
          labelForScreenReadersOnly = true
        )
        }}
        <div class="form-group">
          {{ saveAndContinueButton() }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}
