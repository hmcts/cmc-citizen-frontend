{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, submitButton %}
{% from "./macro/repaymentPlanBlock.njk" import repaymentPlanBlock %}

{% set heading = 'Repayment plan accepted' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        <p> {{ t('The court has accepted your repayment plan.') }} </p>
        {% if isCourtOrderPaymentPlanConvertedByDefendantFrequency %}
          <p> {{ t('The defendant asked to pay in {{ courtOrderFrequency }} instalments and the court accepted this.
              The revised repayment plan is below.', {
              courtOrderFrequency: courtOrderPaymentPlan.paymentSchedule | renderPaymentSchedule(adverbial=true) | lower
            }) }} </p>
          {{
          repaymentPlanBlock(
            heading = '',
            repaymentPlan = courtOrderPaymentPlan
          )
          }}
        {% endif %}
        {{ submitButton() }}
      </form>
    </div>
  </div>
{% endblock %}
