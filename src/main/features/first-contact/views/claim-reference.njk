{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, textInput, submitButton, errorSummary %}

{% set title = t('Enter your claim number') %}
{% set heading = t('Enter your claim number') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">

      <p>{{ t('Enter the claim number from the email or letter we sent you.') }}</p>

      <form method="post">
        {{ csrfProtection(csrf) }}

        {{ textInput('Claim number', 'reference', form) }}
        {{ submitButton('Continue') }}
      </form>
    </div>
  </div>

{% endblock %}

