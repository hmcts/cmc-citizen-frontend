{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, submitButton, linkButton %}
{% from "internalLink.njk" import internalLink %}
{% from "components/free-mediation/howFreeMediationWorks.njk" import howMediationWorks %}

{% set heading = 'You can’t use free mediation' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">

      <p>{{ t('You can only use free mediation if:') }}</p>
      <ul class="list list-bullet">
        <li>{{ t('you’re willing to negotiate and listen to {{ otherParty }}’s position', { otherParty: otherParty }) }}</li>
        <li>{{ t('you have enough information about the claim to discuss it in detail') }}</li>
        <li>{{ t('you can make time for a one-hour call between 8am and 5pm on a weekday') }}</li>
      </ul>
      <p>{{ t('If you can agree to all of these, {{ previousPage }}.',
          { previousPage: internalLink(t('go back and change your answers'), MediationPaths.mediationAgreementPage.evaluateUri({ externalId: claim.externalId })) }) | safe }}
      </p>

      <form method="post" novalidate>
        {{ csrfProtection(csrf) }}

        <div class="form-group">
          {{ submitButton('Continue without free mediation') }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}
