{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary, textArea %}

{% set title = 'Money claim' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large">{{ t('Explain why you can’t pay now') }}</h1>

      <form method="post">
        {{ csrfProtection(csrf) }}

        {{ textArea(
          label = 'Enter your reasons',
          name = 'text',
          form = form,
          bold = true
        ) }}

        {% if statementOfMeansIsApplicable %}
          <div class="panel panel-border-wide">
            <p>
              {{ t('You’ll also need to answer some questions about your finances') }}
            </p>
          </div>
        {% endif %}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
