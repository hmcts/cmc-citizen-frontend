{% extends "layout.njk" %}

{% from "form.njk" import csrfProtection, textInput, radioGroup, saveAndContinueButton, errorSummary %}
{% from "party/details.njk" import partyDetailsFragment %}

{% set heading = 'Confirm your details' %}

{% block additional_scripts %}
  {% include "postcode-lookup-client-scripts.njk" %}
{% endblock %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <p>{{ t('The claimant provided these details.') }}</p>
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}
        <input type="hidden" name="type" value="{{ form.model.type }}">

        {% if form.model.type == 'individual' %}
          {%
            set fields = [
              { label: 'Full name', value: claim.claimData.defendant.name }
            ]
          %}
          {% set addressSectionHeading = 'Your address' %}
        {% elif form.model.type == 'soleTrader' %}
          {%
            set fields = [
              { label: 'Your full name', value: claim.claimData.defendant.name },
              { label: 'Business name', value: claim.claimData.defendant.businessName }
            ]
          %}
          {% set addressSectionHeading = 'Your address' %}
        {% elif form.model.type == 'company' %}
          {%
            set fields = [
              { label: 'Company name', value: claim.claimData.defendant.name },
              { label: 'Contact person (optional)', name: 'contactPerson' }
            ]
          %}
          {% set addressSectionHeading = 'Company address' %}
        {% elif form.model.type == 'organisation' %}
          {%
            set fields = [
              { label: 'Organisation name', value: claim.claimData.defendant.name },
              { label: 'Contact person (optional)', name: 'contactPerson' }
            ]
          %}
          {% set addressSectionHeading = 'Organisation address' %}
        {% endif %}

        {{
          partyDetailsFragment(
            form,
            fields = [
              { label: 'Full name (include title)', name: 'name' }
            ],
            extraOptionalLine = 'If you change your name here, we’ll tell the claimant. It’s up to them to decide whether they agree to change it for their claim.',
            addressSection = {
              heading: addressSectionHeading,
              name: 'address'
            },
            showCorrespondenceAddressSection = true
          )
        }}
        {{ saveAndContinueButton() }}


      </form>
    </div>
  </div>
{% endblock %}
