{% extends "layout.njk" %}
{% from "includes/macros/form.njk" import textInput, saveAndContinueButton, csrfProtection, errorSummary %}

{% set title = t('Money claim') %}
{% set heading = t('Your details') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}
        {{ textInput(t('Your full name'), 'name', form, autocomplete='name') }}
        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
