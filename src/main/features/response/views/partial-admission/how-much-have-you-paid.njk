{% extends "layout.njk" %}

{% set heading = 'How much money do you admit you owe?' %}

{% from "form.njk" import saveAndContinueButton, csrfProtection, poundInput, errorSummary %}

{% block content %}
<div class="grid-row">
  <div class="column-two-thirds">

    <form method="post" novalidate>

      {{ csrfProtection(csrf) }}

      <p>{{ t('The total amount claimed is {{ totalAmount }}. This includes the claim fee and any interest.',
                { totalAmount: totalAmount | numeral }) }}</p>

      {{ poundInput(label = '', name = 'amount', form = form) }}

      {{ saveAndContinueButton() }}
    </form>

  </div>
</div>
{% endblock %}
