{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, textArea, errorSummary, saveAndContinueButton %}

{% set title = t('Money claim') %}
{% set heading = t('How this dispute has affected you?') %}

{% block content %}
<div class="grid-row">
  <div class="column-two-thirds">

    <form novalidate method="post">
      {{ csrfProtection(csrf) }}
      {{ textArea(
        label = 'How this dispute has affected you? (optional)',
        name = 'text',
        form = form,
        bold = true
      ) }}

      <div class="panel panel-border-wide">
        <p>
          {{ t('Your response will be sent to the claimant %s.',
          { postProcess: 'sprintf', sprintf: [claimantName] }) }}
        </p>
      </div>

      {{ saveAndContinueButton() }}
    </form>

  </div>
</div>
{% endblock %}
