{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, textInput, saveAndContinueButton, errorSummary, textArea %}
{% from "date.njk" import dateInput %}

{% set heading = 'When did you pay?' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {{ dateInput(name = 'date', form = form) }}

        {{ textArea(label = t('How did you pay the amount claimed?'), name = 'text', form = form) }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
