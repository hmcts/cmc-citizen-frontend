{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, textInput, saveAndContinueButton, errorSummary, textArea, poundInput %}
{% from "date.njk" import dateInput %}

{% set title = t('Money claim') %}
{% set heading = t('When did you pay?') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        <h4 class="heading-small">{{ t('When did you pay the amount?') }}</h4>
        {{ dateInput('date', form) }}

        {{ textArea(label = t('How did you pay the amount claimed?'), name = 'text', form = form) }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
