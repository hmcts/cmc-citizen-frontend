{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary %}
{% from "date.njk" import dateInput %}

{% set heading = t('Enter your date of birth') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post">
        <input type="hidden" name="known" value="true" />

        {{ csrfProtection(csrf) }}

        {{ dateInput(form = form, name = 'date') }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
