{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, yesNoRadio, saveAndContinueButton, errorSummary %}

{% set heading = 'Do you claim Carer’s Allowance or Carer’s Credit?' %}

{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">

      <form method="post" novalidate
            class="analytics-submit-event-trigger"
            data-event-action="SoM: Do you claim Carer’s Allowance or Carer’s Credit?"
            data-event-label-from="option">

        {{ csrfProtection(csrf) }}

        {{ yesNoRadio(t('Do you claim Carer’s Allowance or Carer’s Credit?'), 'option', form) }}

        {{ saveAndContinueButton() }}

      </form>

    </div>
  </div>

{% endblock %}
