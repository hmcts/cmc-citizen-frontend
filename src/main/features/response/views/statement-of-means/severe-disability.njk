{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, yesNoRadio, saveAndContinueButton, errorSummary %}

{% set heading = 'Is your disability considered a severe disability?' %}

{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">

      <form method="post" novalidate
            class="analytics-submit-event-trigger"
            data-event-action="SoM: Is your disability considered a severe disability?"
            data-event-label-from="option">

        {{ csrfProtection(csrf) }}

        {{ yesNoRadio(t('Is your disability considered a severe disability?'), 'option', form) }}

        {{ saveAndContinueButton() }}

      </form>

    </div>
  </div>

{% endblock %}
