{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, yesNoRadio, saveAndContinueButton, errorSummary %}

{% set heading = 'Are any of the children that live with you disabled?' %}

{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">

      <form method="post" novalidate
            class="analytics-submit-event-trigger"
            data-event-action="SoM: Are any of the children that live with you disabled?"
            data-event-label-from="dependantDisabled">

        {{ csrfProtection(csrf) }}

        {{ yesNoRadio(t('Are any of the children that live with you disabled?'), 'dependantDisabled', form) }}

        {{ saveAndContinueButton() }}

      </form>

    </div>
  </div>

{% endblock %}
