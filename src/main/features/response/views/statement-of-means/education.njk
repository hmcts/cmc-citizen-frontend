{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, radioOption, numericInput, saveAndContinueButton, errorSummary %}
{% from "date.njk" import dateInput %}

{% set heading = 'Children aged 16 to 19 living with you' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post" novalidate>

        {{ csrfProtection(csrf) }}

        <p>{{ t('How many are both of the following:') }}</p>

        <ul class="list list-bullet">
          <li>{{ t('in full-time education or training') }}</li>
          <li>{{ t('not married or in a civil partnership') }}</li>
        </ul>

        <input type="hidden" name="maxValue" value="{{ between16and19 | default(0) }}">
        {{ numericInput('Enter number', 'value', form) }}

        {{ saveAndContinueButton() }}

      </form>
    </div>
  </div>
{% endblock %}
