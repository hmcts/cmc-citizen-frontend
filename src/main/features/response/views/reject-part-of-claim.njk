{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, yesNoRadio, saveAndContinueButton, errorSummary %}

{% set heading = 'Have you paid the claimant the amount you admit you owe?' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">

      <form method="post"
        class="analytics-submit-event-trigger"
        data-event-action="Response: Select part admission option"
        data-event-label-from="option"
        novalidate>

        {{ csrfProtection(csrf) }}

        {{ yesNoRadio(label = heading, name = 'option', form = form, isInline = true) }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
