{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary %}
{% from "timelineForm.njk" import timelineForm %}

{% set title = t('Money claim') %}
{% set heading = t('Add your timeline of events') %}

{% block content %}
<div class="grid-row">
  <div class="column-two-thirds">

    <form method="post" novalidate>
      {{ csrfProtection(csrf) }}
      <h2 class="heading-small">{{ t('Add your timeline of events (optional)') }}</h2>
      <p>{{ t('Include dates if you know them.') }}</p>

      {{ timelineForm(form) }}

      <div class="panel panel-border-wide">
        <p>{{
              t('Your response will be sent to the claimant %s. A judge will not consider your response unless your case goes to a hearing.',
                { postProcess: 'sprintf', sprintf: [ claimantName ] })
           }}
        </p>
      </div>

      {{ saveAndContinueButton() }}

    </form>
  </div>
</div>
{% endblock %}
