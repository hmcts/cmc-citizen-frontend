{% extends "layout.njk" %}
{% from "support.njk" import supportWidget %}
{% from "externalLink.njk" import externalLink %}
{% from "internalLink.njk" import internalLink %}

{% set headingVisible = false %}
{% set heading = 'Confirmation' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="govuk-box-highlight">
        <h1 class="bold-large">{{ t('You’ve submitted your response') }}</h1>
        <p class="reference-number">
          <span>{{ t('Claim number:') }}</span>
          <span class="block bold-large">{{ claim.claimNumber }}</span>
        </p>
        <p>
          <span class="bold">{{ claim.respondedAt | date }}</span>
        </p>
        <p class="receipt-download-container">
          <a href="{{ ResponsePaths.receiptReceiver.evaluateUri({ externalId: claim.externalId }) }}">{{ t('Download your response') }}</a> (PDF)
        </p>
      </div>

      {% if claim.response.responseType === domain.ResponseType.FULL_ADMISSION %}
        {% include "./confirmation/full-admission.njk" %}
      {% elseif claim.response.responseType === domain.ResponseType.FULL_DEFENCE %}
        {% include "./confirmation/full-defence.njk" %}
      {% elseif claim.response.responseType === domain.ResponseType.PART_ADMISSION %}
        {% include "./confirmation/part-admission.njk" %}
      {% endif %}

      {% if claim.claimData.defendant.isBusiness and
        (claim.response.responseType === domain.ResponseType.PART_ADMISSION
        or claim.response.responseType === domain.ResponseType.FULL_ADMISSION) %}
        <h2 class="heading-medium">{{ t('Send your financial details') }}</h2>
        <p>{{ t('Send {{ claimantName }} your company or organisation’s most recent statement of accounts, if you haven’t already.',
            { claimantName: claim.claimData.claimant.name }) }}</p>

        <p>{{ internalLink(
            t('Get {{ claimantName }}’s contact details', { claimantName: claim.claimData.claimant.name }),
            DashboardPaths.contactThemPage.evaluateUri({ externalId: claim.externalId })
          ) }}.</p>
      {% endif %}

      <h2 class="heading-medium">{{ t('What happens next') }}</h2>

      {% if claim.response.responseType === domain.ResponseType.FULL_ADMISSION %}
        {% include "./confirmation/full-admission-steps.njk" %}
      {% elseif claim.response.responseType === domain.ResponseType.FULL_DEFENCE %}
        {% include "./confirmation/full-defence-steps.njk" %}
      {% elseif claim.response.responseType === domain.ResponseType.PART_ADMISSION %}
        {% include "./confirmation/part-admission-steps.njk" %}
      {% endif %}

      {% include "includes/service_survey_link.njk" %}

      <p><a class="button" href="{{ DashboardPaths.dashboardPage.uri }}">{{ t('Go to your account') }}</a></p>

      {{ supportWidget() }}
    </div>
  </div>
{% endblock %}
