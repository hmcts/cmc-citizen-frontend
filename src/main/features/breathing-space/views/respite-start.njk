{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, textInput, saveAndContinueButton, errorSummary %}
{% from "date.njk" import dateInput %}

{% set heading = 'When did it start?' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
    <p>{{ t('This is the date it started, not the date you received notification of it (optional).') }}</p>
      <form method="post">
        <input type="hidden" name="known" value="true" />
        {{ csrfProtection(csrf) }}
        {{ dateInput('respiteStart', form, hint = t('For example, {{ pastDate }}', { pastDate: pastDate | inputDate })) }}
        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
