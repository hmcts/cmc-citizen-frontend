{% extends "layout.njk" %}
{% from "externalLink.njk" import externalLink %}

{% set title = t('Eligibility | Money claim') %}
{% set legacyServiceUrl = 'https://www.moneyclaim.gov.uk/web/mcol/welcome' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      {% if registeredUser %}
      <h1 class="heading-large">{{ t('Find out if you can use this service') }}</h1>

      <p>
        {{ t('We’ll ask you some questions to check you can use this service. '
        + 'We can’t say if your claim will be successful or not.') }}
      </p>

      <a href="{{ EligibilityPaths.claimValuePage.uri }}" class="button">{{ t('Continue') }}</a>
      {% else %}
      <h1 class="heading-large">{{ t('Try the new beta service') }}</h1>

      <p>
        {{ t('We’re building a new service to make it simpler, clearer and faster to make and respond to claims online.') }}
      </p>

      <p>
        {{ t('It’s in the beta phase which means we’re continuously improving it based on feedback from users.'
        + 'You can still use ' + externalLink('Money Claim Online (MCOL)', legacyServiceUrl)
        + 'if you prefer while the new service is in beta.') | safe }}
      </p>

      <p>{{ t('We’ll ask you some questions to check you can use the new service.') }}</p>

      <a href="{{ EligibilityPaths.claimValuePage.uri }}" class="button">{{ t('Continue to new service') }}</a>
      {% endif %}
    </div>
  </div>
{% endblock %}
