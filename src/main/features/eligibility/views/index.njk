{% extends "layout.njk" %}
{% from "internalLink.njk" import internalLink %}

{% if registeredUser %}
  {% set heading = 'Find out if you can make a claim using this service' %}
{% else %}
  {% set heading = 'Try the new online service' %}
{% endif %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      {% if registeredUser %}
        <p>
          {{ t('We’ll ask you some questions to check you can use this service. We can’t say if your claim will be successful or not.') }}
        </p>

      {% else %}

        <p>{{ t('We are building a new service. Different designs are being tested and changed based '
          + 'on feedback from users.') }}</p>

        <p>{{ t('You will be asked some questions to check you are eligible to use this service.') }}</p>

      {% endif %}

      {{ internalLink(t('Continue'), EligibilityPaths.claimValuePage.uri, 'button') }}
    </div>
  </div>
{% endblock %}
