{% extends "layout.njk" %}
{% set heading = 'The repayment plan' %}
{% from "support.njk" import supportWidget %}

{% from "table.njk" import tableStart, tableEnd, row, rowWithMultipleValue %}
{% from "form.njk" import csrfProtection, errorSummary %}
{% from "repaymentPlanBlock.njk" import repaymentPlanBlock %}


{% block content %}
  {{ csrfProtection(csrf) }}
  <div class="grid-row">
    <div class="column-two-thirds">

      {{ repaymentPlanBlock(
        heading = 'The repayment plan',
        instalmentAmount = claim.countyCourtJudgment.repaymentPlan.instalmentAmount,
        paymentSchedule = claim.countyCourtJudgment.repaymentPlan.paymentSchedule,
        firstPaymentDate = claim.countyCourtJudgment.repaymentPlan.firstPaymentDate,
        lastPaymentOn = claim.countyCourtJudgment.repaymentPlan.completionDate,
        lengthOfPayment = claim.countyCourtJudgment.repaymentPlan.paymentLength
      ) }}

      <p>{{ t('If you think the defendant can repay you sooner, you can ') }} <a
          href="{{ CCJPaths.redeterminationPage.evaluateUri({ externalId: claim.externalId }) }}">{{ t('ask a judge to make a new repayment plan.') }}</a>
      </p>
    </div>
  </div>
{% endblock %}
