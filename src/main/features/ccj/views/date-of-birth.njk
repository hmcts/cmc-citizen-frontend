{% extends "layout.njk" %}
{% from "includes/macros/form.njk" import csrfProtection, textInput, radioGroup, radioOption, saveAndContinueButton, errorSummary %}
{% from "includes/macros/date.njk" import dateInput %}

{% set title = t('Money claim') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post">
        {{ csrfProtection(csrf) }}

        <h1 class="heading-large">
          <span class="heading-secondary">{{ t('County Court Judgment') }}</span>
          {{ t("Defendant's date of birth") }}
        </h1>

        <p>{{ t("We use this to ensure legal proceedings are made against the right person. " +
        "For example, if there are 2 people living at the same address with the same " +
        "name.") }}</p>


        {% set errorType = form.errorFor('known') %}
        <fieldset class="form-group {% if errorType %} form-group-error {% endif %}">

          <legend>
              <span class="form-label-bold">
                {{ t("Do you know the defendant's date of birth?") }}
              </span>
          </legend>

          {% if errorType %}<span class="error-message">{{ t(errorType) }}</span>{% endif %}
          <div class="multiple-choice" data-target="type-known">
            <input id="yesType" type="radio" name="known" value="true" {% if form.valueFor('known.value')  == "true" %} checked="checked" {% endif %}>
            <label class="form-label-bold" for="yesType">{{ t('Yes') }} </label>
          </div>

          <div class="form-group panel panel-border-narrow js-hidden " id="type-known" aria-hidden="false">
            {{ dateInput('date', form) }}
          </div>

          <div class="multiple-choice">
            <input id="notSureType" type="radio" name="known" value="false" {% if form.valueFor('known.value')  == "false" %} checked="checked" {% endif %}>
            <label class="form-label-bold" for="notSureType">{{ t('Not sure') }} </label><br>
            <label class="form-hint"> {{ t('The court will still enter the judgment for you.') }}</label>
          </div>
        </fieldset>

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
