{% extends "layout.njk" %}
{% from "includes/macros/form.njk" import csrfProtection, textInput, saveAndContinueButton, errorSummary %}
{% from "includes/macros/date.njk" import dateInput %}

{% set title = t('Money claim') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post">
        <input type="hidden" name="known" value="true" />
        {{ csrfProtection(csrf) }}

        <h1 class="heading-large">
          <span class="heading-secondary">{{ t('County Court Judgment') }}</span>
          {{ t("Order them to pay full amount by a set date") }}
        </h1>

        <fieldset class="form-group {% if error %} form-group-error {% endif %}">

          <legend>
              <span class="form-label-bold">
                {{ t("When you want them to pay the amount") }}
              </span>
          </legend>

        </fieldset>


        {{ dateInput('date', form) }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
