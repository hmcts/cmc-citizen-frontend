{% extends "layout.njk" %}

{% if madeBy === 'CLAIMANT'%}
{% set heading = 'Why do you believe the defendant can repay you sooner?' %}
{% else %}
{% set heading = 'Ask a judge to make a repayment plan' %}
{% endif %}

{% from "form.njk" import saveAndContinueButton, submitButton, csrfProtection, errorSummary, textArea %}
{% from "repaymentPlanBlock.njk" import repaymentPlanBlock %}

{% block content %}
<div class="column-two-thirds">

  <form method="post">
    {{ csrfProtection(csrf) }}

    {% if madeBy === 'DEFENDANT'%}
    {{ repaymentPlanBlock( heading = 'The claimant has proposed this repayment plan', repaymentPlan = repaymentPlan ) }}
    {% endif %}

    {{ textArea(label = 'Why do you feel this plan is not affordable?', name = 'text', form = form, rows = 5,
    columns=18) }}

    {% if madeBy === 'CLAIMANT'%}
    {{ saveAndContinueButton() }}
    {% else %}
    {{ submitButton(label = 'Ask a judge to make a repayment plan', id = 'saveAndContinue') }}
    {% endif %}
  </form>

</div>
{% endblock %}
