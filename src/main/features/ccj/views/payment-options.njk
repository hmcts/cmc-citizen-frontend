{% extends "layout.njk" %}

{% set title = 'Money claim' %}

{% from "includes/macros/form.njk" import saveAndContinueButton, csrfProtection, radioGroup, errorSummary %}

{% block content %}
  <div class="column-two-thirds">

    <h1 class="heading-large">
      <span class="heading-secondary">{{ t("County Court Judgment") }} </span>

      {{ t("Payment options") }}
    </h1>


    <h1 class="heading-medium">
      {{ t("I would like the defendant to be ordered to pay: ") }}
    </h1>

    <form method="post" novalidate>
      {{ csrfProtection(csrf) }}

      {{
      radioGroup(
        'What do you want to do?',
        'option',
        [
          {'label': 'Immediately', value: 'immediately'},
          {'label': 'By instalments', value:  'instalments'},
          {'label': 'The full amount by a set date', value:  'full'}
        ],
        form = form
      )
      }}

      {{ saveAndContinueButton() }}
    </form>

  </div>
{% endblock %}
