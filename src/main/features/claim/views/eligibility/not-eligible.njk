{% extends "layout.njk" %}
{% from "macro/paperFormAddress.njk" import paperFormAddress %}

{% set title = t('Not eligible | Money claim') %}

{% macro newWindow() %}<span class="font-xsmall">{{ t('(opens in a new window)') }}</span>{% endmacro %}

{% block content %}

  {% set n1FormUrl = 'https://formfinder.hmctsformfinder.justice.gov.uk/n1-eng.pdf' %}
  {% set legacyServiceUrl = 'https://www.moneyclaim.gov.uk/web/mcol/welcome' %}
  {% set n510Url = 'http://formfinder.hmctsformfinder.justice.gov.uk/n510-eng.pdf' %}
  {% set citizensAdviceUrl = 'https://www.citizensadvice.org.uk/about-us/how-we-provide-advice/advice/' %}
  {% set governmentDepartmentsUrl = 'https://www.gov.uk/government/publications/serve-the-treasury-solicitor-with-legal-proceedings' %}
  {% set tenancyServiceUrl = 'https://www.gov.uk/tenancy-deposit-protection/disputes-and-problems' %}
  {% set feesHelpUri = 'https://www.gov.uk/get-help-with-court-fees' %}

  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large">{{ t('You can’t use this service') }}</h1>

      {% if reason === NotEligibleReason.CLAIM_VALUE_NOT_KNOWN %}
        <p>{{ t('You need to know the claim amount to use this service.') }}</p>
        <p>{{ t('If you can’t calculate the claim amount, for example because you’re claiming for an injury or accident, ' +
        ' use the <a target="_blank" href="{{ n1FormUrl }}">N1 paper form</a> '+ newWindow() + '.' ,
          {  n1FormUrl : n1FormUrl }) | safe }}</p>
        {{ paperFormAddress() }}
        </p>
      {% elseif reason === NotEligibleReason.CLAIM_ON_BEHALF %}
        <p>{{ t('This service is currently for claimants representing themselves.') }}</p>
        <p>{{ t('If you’re a legal representative <a target="_blank" href="{{ MCOL }}">use the Money Claim Online (MCOL) service</a> or ' +
            'use <a target="_blank" href="{{ n1FormUrl }}">form N1</a> '+ newWindow() + ' to make your claim.',
          { MCOL: 'https://www.moneyclaim.gov.uk/web/mcol/welcome', n1FormUrl : n1FormUrl }) | safe }}
        {{ paperFormAddress() }}
      {% elseif reason === NotEligibleReason.MULTIPLE_CLAIMANTS %}
        <p>{{ t('You can’t use this service if more than one person or business is making the claim') }}</p>
        <p>{{ t('Use <a target="_blank" href="%s">form N1 </a>' + newWindow() + ' to make your claim.',
          { postProcess: 'sprintf', sprintf: [ n1FormUrl ]}) | safe }}</p>
        {{ paperFormAddress() }}
      {% elseif reason === NotEligibleReason.MULTIPLE_DEFENDANTS %}
        <p>{{ t('You can’t use this service if this claim is against more than one person or business.') }}</p>
        <p>{{ t('Use <a target="_blank" href="{{ legacyServiceUrl }}">Money Claim Online </a> ' + newWindow()
          + ' for claims against 2 people or organisations.',
          { legacyServiceUrl: legacyServiceUrl }) | safe }}</p>
        <p>{{ t(' Use <a target="_blank" href="{{ n1FormUrl }}">form N1 </a> '+ newWindow()
          + ' for claims against 3 or more people or organisations.',
          {  n1FormUrl : n1FormUrl }) | safe }}</p>
        {{ paperFormAddress() }}
      {% elseif reason === NotEligibleReason.CLAIM_VALUE_OVER_10000 %}
        <p>{{ t('This service is for claims of £10,000 or less.') }}</p>
        <p>
          {{ t('Use <a target="_blank" href="%s">Money Claim Online (MCOL)</a> ' + newWindow()
          + ' for claims between £10,001 and £100,000.',
          { postProcess: 'sprintf', sprintf: [ legacyServiceUrl ]}) | safe }}</p>
        <p>{{ t('Use <a target="_blank" href="%s">form N1</a> ' + newWindow() + ' for claims over £100,000.',
          { postProcess: 'sprintf', sprintf: [ n1FormUrl ]}) | safe }}</p>
        {{ paperFormAddress() }}
      {% elseif reason === NotEligibleReason.UNDER_18 %}
        <p>{{ t('You need to be 18 or over to use this service.') }}</p>
        <p>{{ t('You might be able to get advice from organisations like ' +
          '<a target="_blank" href="%s">Citizens Advice</a> ' + newWindow() + ' about making a claim.',
          { postProcess: 'sprintf', sprintf: [ citizensAdviceUrl ]}) | safe }}</p>
      {% elseif reason === NotEligibleReason.HELP_WITH_FEES %}
        <p>{{ t('You need to use the paper service if you want <a target="_blank" href="{{ feesHelpUri }}">help paying your court fees</a>.'
          + newWindow() + '.',
          { n1FormUrl : n1FormUrl, feesHelpUri : feesHelpUri }) | safe }}</p>
        <p>{{ t('Make your claim by post using <a target="_blank" href="{{ n1FormUrl }}">form N1</a> ' + newWindow() + '.',
        { n1FormUrl : n1FormUrl }) | safe }}</p>
        {{ paperFormAddress() }}
      {% elseif reason === NotEligibleReason.CLAIMANT_ADDRESS %}
        <p>{{ t('You need to have an address in the UK to use this service.') }}</p>
      {% elseif reason === NotEligibleReason.DEFENDANT_ADDRESS %}
        <p>{{ t('You can only use this service to claim against a person or organisation with an address in England or Wales.') }}</p>
        <p>{{ t('Depending on where you’ll be sending the claim, you might be able to use <a target="_blank" href="{{ n1FormUrl }}">form N1</a> '
          + newWindow() + ' and <a target="_blank" href="{{ n510Url }}">form N510</a> ' + newWindow() + '.',
          { n1FormUrl : n1FormUrl , n510Url : n510Url }) | safe }}</p>
        {{ paperFormAddress() }}
      {% elseif reason === NotEligibleReason.GOVERNMENT_DEPARTMENT %}
        <p>{{ t('You can’t use this service to claim against <a target="_blank" href="{{ governmentDepartmentsUrl }}">government departments</a>. ',
          { governmentDepartmentsUrl : governmentDepartmentsUrl }) | safe }}</p>
        <p>{{ t('Use <a target="_blank" href="{{ n1FormUrl }}">form N1</a> ' + newWindow() + ' to make your claim.',
          { n1FormUrl : n1FormUrl }) | safe }}</p>
        {{ paperFormAddress() }}
      {% elseif reason === NotEligibleReason.CLAIM_IS_FOR_TENANCY_DEPOSIT %}
        <p>{{ t('You can’t make a claim for a tenancy deposit using this service.') }}</p>
        <p>{{ t('Get <a target="_blank" href="{{ tenancyServiceUrl }}"> help to resolve your dispute</a> with a landlord or tenant.</p>',
          { tenancyServiceUrl: tenancyServiceUrl  }) | safe }}
        </p>
      {% endif %}
    </div>

  </div>

{% endblock %}
