{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, input, saveAndContinueButton, errorSummary %}

{% set heading = 'Their phone number (optional)' %}

{% block content %}
  <div class="grid-row">
      <div class="column-two-thirds">

        <form method="post">
          {{ csrfProtection(csrf) }}
          {{ input('Their phone number (optional)', 'number', form, '', labelClass = 'visually-hidden') }}
          {{ saveAndContinueButton() }}
        </form>
      </div>
  </div>
{% endblock %}
