{% extends "layout.njk" %}

{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary %}
{% from "party/details.njk" import partyDetailsFragment %}

{% set title = t('Money claim') %}
{% set heading = t('Your details') %}

{% block additional_scripts %}
  {% include "postcode-lookup-client-scripts.njk" %}
{% endblock %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post" novalidate>
        {{ csrfProtection(csrf) }}

        {{
          partyDetailsFragment(
            form,
            fields = [
              { label: 'Full name', name: 'name' },
              { label: 'Business name (optional)', name: 'businessName' }
            ],
            addressSection = {
              heading: 'Your address',
              hint: 'This must be the address where you live or trade.',
              name: 'address',
              postcodeLookup: true
            },
            showCorrespondenceAddressSection = true
          )
        }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
