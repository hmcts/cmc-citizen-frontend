{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary %}
{% from "party/details.njk" import soleTraderDetailsFragment %}

{% set title = t('Money claim') %}
{% set heading = t('Your details') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post" novalidate>
        {{ csrfProtection(csrf) }}

        {{
          soleTraderDetailsFragment(
            form,
            nameLabel = 'Full name',
            addressHeading = "Your address",
            addressHint = "This must be the address where you live or trade.",
            hasCorrespondenceAddress = true
          )
        }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
