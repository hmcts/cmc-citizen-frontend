{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary %}
{% from "party/details.njk" import partyDetailsFragment %}

{% set title = t('Money claim') %}
{% set heading = t('Your details') %}

{% block additional_scripts %}
  <script src="{{ asset_paths['js_vendor'] }}/nodelist-foreach-polyfill.js"></script>
  <script src="{{ asset_paths['js'] }}/postcode-lookup.js"></script>
{% endblock %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post" novalidate>
        {{ csrfProtection(csrf) }}

        {{
          partyDetailsFragment(
            form,
            fields = [
              { label: 'Full name', name: 'name' }
            ],
            addressSection = {
              heading: 'Your residential address',
              hint: 'This must be the address where you live.',
              name: 'address',
              postcodeLookup: true
            },
            showCorrespondenceAddressSection = true
          )
        }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
