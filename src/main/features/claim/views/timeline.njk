{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary %}
{% from "timelineForm.njk" import timelineForm%}

{% set title = t('Money claim') %}
{% set heading = t('Timeline of events') %}

{% block content %}
<div class="grid-row">
  <div class="column-two-thirds">

    <form method="post" novalidate>
      {{ csrfProtection(csrf) }}
      <h3 class="heading-small">{{ t('Example timeline') }}</h3>
      <ul class="list list-bullet">
        <li>{{ t('12 January 2017 - John Smith gave me a quote to replace the roof.') }}</li>
        <li>{{ t('14 January 2017 - We agreed and signed a contract for the work.') }}</li>
        <li>{{ t('21 March 2017 - I noticed a leak on the landing and told Mr Smith about this.') }}</li>
      </ul>

      {{ timelineForm(form) }}
      {{ saveAndContinueButton() }}

    </form>
  </div>
</div>
{% endblock %}
