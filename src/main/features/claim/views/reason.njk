{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, emailInput, saveAndContinueButton, errorSummary, textArea %}

{% set title = t('Money claim') %}
{% set heading = t('Why youâ€™re owed the money') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">

      <p>{{ t('Briefly explain why you are owed the money.') }}</p>
      <div class="panel panel-border-wide">
        <p>{{ t('Your claim will be sent to the defendant %1$s - a judge will not consider your explanation unless the defendant %1$s rejects your claim.',
        {
          postProcess: 'sprintf',
          sprintf: [defendantName]
        })
        }}</p>
      </div>
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {{ textArea(label = '', name = 'reason', form = form, rows = 10) }}
        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
