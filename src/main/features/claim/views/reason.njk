{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, emailInput, saveAndContinueButton, errorSummary, textArea %}

{% set title = t('Money claim') %}
{% set heading = t('Why youâ€™re owed the money') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form novalidate method="post">
        {{ csrfProtection(csrf) }}

        {% set name = 'reason' %}
        {% set error = form.errorFor(name) %}
        <div class="form-group {% if error %} form-group-error {% endif %}">
          <label for="{{ name }}" id="{{ name }}[label]">
            <p class="form-label">
              {{ t('Explain why you believe the defendant owes you money.') }}
            </p>
            <p class="form-label">
              {{ t('List any evidence or documents which support your claim - you might be asked to provide them later.') }}
            </p>

            {% if error %}
              <span class="error-message">{{ t(error) }}</span>
            {% endif %}
          </label>

          <textarea id="{{ name }}" name="{{ name }}" rows="10" class="form-control full-width {% if error %}form-control-error{% endif %}">{{ form.valueFor(name) | default('') }}</textarea>
        </div>

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
