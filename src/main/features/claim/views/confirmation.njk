{% extends "layout.njk" %}
{% from "form.njk" import submitButton, errorSummary %}
{% from "support.njk" import supportWidget %}
{% set title = t('Claim confirmation') %}

{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="govuk-box-highlight">
        <h1 class="bold-large">{{ t('Claim submitted') }}</h1>
        <div class="reference-number">
          <span>{{ t('Your claim number:') }}</span>
          <h1 class="bold-large">{{ claimNumber }}</h1>
        </div>
        <p class="issue-receipt-download">
          <a href="/claim/{{ externalId }}/receipt">{{ t('Download claim as pdf') }}</a>
        </p>

      </div>

      <h2 class="heading-medium">{{ t('What happens next') }}</h2>
      <p>{{ t('{{ defendantName }} has until 4pm on {{ responseDeadline }} to respond to your claim. They can ask for an extra 14 days if they need it.
              We’ll email you when they respond.',
          {
            defendantName : defendantName,
            responseDeadline: responseDeadline | date
          }
        ) | safe }}
      </p>
      <p>{{ t('You can request a default County Court Judgment (CCJ) against them if they don’t respond.') }}</p>

      <h2 class="heading-medium">{{ t('If the defendant pays you') }}</h2>
      <p>
        {{ t('You need to email {{ supportEmailAddress }} to let us know. Include the date you were paid.',
          {
            supportEmailAddress: supportEmailAddress
          }
        ) | safe }}
      </p>
      <p>{{ t('You can view the claim at any time on <a href="{{ dashboard }}"> your money claims account</a>.',
          {
            dashboard: '/dashboard'
          }) | safe }}</p>

      {% include "includes/service_survey_link.njk" %}

      {{ supportWidget() }}

    </div>

  </div>

{% endblock %}
