{% extends "layout.njk" %}
{% from "task-list.njk" import task, taskListHeading, disabledTask %}
{% set heading = 'Make a money claim' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="task-group">
        {{ taskListHeading(beforeYouStart.name) }}

        {% for item in beforeYouStart.tasks %}
          {{ task(item.startPageUrl, t(item.name), item.completed) }}
        {% endfor %}
      </div>

      <div class="task-group">
        {{ taskListHeading(prepareYourClaim.name) }}

        {% for item in prepareYourClaim.tasks %}
          {{ task(item.startPageUrl, t(item.name), item.completed) }}
        {% endfor %}
      </div>

      <div class="task-group">
        {{ taskListHeading(submit.name) }}

        {% for item in submit.tasks %}
          {{ task(item.startPageUrl, t(item.name), item.completed) }}
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
