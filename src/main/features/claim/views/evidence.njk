{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary %}
{% from "evidenceFragment.njk" import evidenceFragment %}

{% set title = t('Money claim') %}
{% set heading = t('List any evidence (optional)') %}

{% block content %}
<div class="grid-row">
  <div class="column-two-thirds">

    <form method="post" novalidate>
      {{ csrfProtection(csrf) }}
      <p>{{ t('You only need to list your evidence for now. You may be asked to provide the actual evidence later.') }}</p>

      <h2 class="heading-small">{{ t('List your evidence') }}</h2>

      {{ evidenceFragment(form) }}
      {{ saveAndContinueButton() }}

    </form>
  </div>
</div>
{% endblock %}
