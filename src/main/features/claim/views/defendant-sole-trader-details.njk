{% extends "layout.njk" %}

{% from "form.njk" import csrfProtection, saveAndContinueButton, errorSummary %}
{% from "party/details.njk" import partyDetailsFragment %}

{% set title = t('Money claim') %}
{% set heading = t('Their details') %}

{% block additional_scripts %}
  <script src="{{ asset_paths['js'] }}/postcode-lookup.js"></script>
{% endblock %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post" novalidate>
        {{ csrfProtection(csrf) }}

        {{
          partyDetailsFragment(
            form,
            fields = [
              { label: 'Full name', name: 'name' },
              { label: 'Business name (optional)', name: 'businessName' }
            ],
            addressSection = {
              heading: 'Their address',
              hint: 'You must enter the defendantâ€™s residentials or trade address to make a claim against them.',
              name: 'address',
              postcodeLookup: true
            },
            showCorrespondenceAddressSection = false
          )
        }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
