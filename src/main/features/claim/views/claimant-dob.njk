{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, textInput, saveAndContinueButton, errorSummary %}
{% from "date.njk" import dateInput %}

{% set heading = 'What is your date of birth?' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post">
        <input type="hidden" name="known" value="true" />
        {{ csrfProtection(csrf) }}

        {{ dateInput(form = form, name = 'date', visuallyHiddenLabelValue = 'date of birth') }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
