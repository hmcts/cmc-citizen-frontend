{% extends "layout.njk" %}

{% set title = 'Money claim' %}

{% from "includes/macros/form.njk" import submitButton, csrfProtection %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large">
        <span class="heading-secondary">{{ t('County Court Judgment') }}</span>
        {{ t('Confirm their details') }}
      </h1>

      <p>{{ t('Check their address is right. You can correct or update address.') }}</p>
      <div>
