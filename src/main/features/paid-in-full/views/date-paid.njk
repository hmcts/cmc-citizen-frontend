{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, errorSummary %}
{% from "timelineFragment.njk" import timelineFragment %}
{% from "date.njk" import dateInput %}

{% set heading = ('When did you receive the money?') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post">
        <input type="hidden" name="known" value="true"/>
        {{ csrfProtection(csrf) }}

        <p>{{ t('Enter the exact date the money was clear in your account if you were paid by cheque or bank transfer.') }}</p>
        {{ dateInput(form = form, name = 'date', hint = 'For example, 10 9 2018') }}
        <a class="button" href="{{ "nextPageUrl" }}">{{ t('Continue') }}</a>

      </form>
    </div>
  </div>
{% endblock %}
