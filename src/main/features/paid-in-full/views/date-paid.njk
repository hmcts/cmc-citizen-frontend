{% extends "layout.njk" %}
{% from "form.njk" import csrfProtection, errorSummary, saveAndContinueButton %}
{% from "date.njk" import dateInput %}

{% set heading = ('When did you settle the claim?') %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">
      <form method="post">
        <input type="hidden" name="known" value="true"/>
        {{ csrfProtection(csrf) }}

        <p>{{ t('If you were paid by cheque or bank transfer, enter the exact date money was clear in your account.') }}</p>
        {{ dateInput(form = form, name = 'date', hint = t('For example, {{ twoWeeksAgo }}', { twoWeeksAgo : 'now' | addDays(-14) | inputDate })) }}

        {{ saveAndContinueButton() }}
      </form>
    </div>
  </div>
{% endblock %}
