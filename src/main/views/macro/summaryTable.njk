
{% macro evidenceSummary(evidence) %}
  <table class="mobile-table">
    <tr>
      <th class="bold-small">{{ t('Type') }}</th>
      <th class="bold-small">{{ t('Description') }}</th>
    </tr>
    {% for evidenceRow in evidence %}
      <tr>
        <td>{{ evidenceRow.type.displayValue }}</td>
        <td>{{ evidenceRow.description }}</td>
      </tr>
    {% endfor %}
  </table>
{% endmacro %}

{% macro timelineSummary(timeline) %}
  <table class="mobile-table">
    <tr>
      <th class="bold-small">{{ t('Date') }}</th>
      <th class="bold-small">{{ t('What happened') }}</th>
    </tr>
    {% for timelineRow in timeline %}
      <tr>
        <td>{{ timelineRow.date }}</td>
        <td>{{ timelineRow.description }}</td>
      </tr>
    {% endfor %}
  </table>
{% endmacro %}
