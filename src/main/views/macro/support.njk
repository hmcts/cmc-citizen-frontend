{% from "externalLink.njk" import externalLink %}

{% macro supportWidget(label = 'Help and support') %}
    <h2 class="heading-medium">{{ t(label) }}</h2>
    <pre>{{ t("Email: " + supportEmailAddress) }}</pre>
    <pre>{{ t('Telephone: 0300 123 7050') }}</pre>
    <pre>{{ t("Hours: 9am to 5pm, Monday to Friday") }}</pre>
    {{ _callCharges() }}
{% endmacro %}

{% macro mcolSupportWidget(label = 'Help and advice') %}
  <h2 class="heading-medium">{{ t(label) }}</h2>
  <pre>{{ t('Money Claim Online helpdesk') }}</pre>
  <pre>{{ t('Email: ccbc@hmcts.gsi.gov.uk') }}</pre>
  <pre>{{ t('Telephone: 0300 123 1057') }}</pre>
  <pre>{{ t('Monday to Friday, 8:30am to 5pm') }}</pre>
  {{ _callCharges() }}
{% endmacro %}

{% macro _callCharges() %}
  <p>
    {{ externalLink(t('Find out about call charges'), 'https://www.gov.uk/call-charges') }}
  </p>
{% endmacro %}

{% macro citizensAdviceWidget() %}
<p>
  {{ t('You might be able to get advice about the claim from') }}
  {{ externalLink(t('Citizens Advice'), 'https://www.citizensadvice.org.uk/about-us/contact-us/') }}.
</p>
{% endmacro %}


{% macro contactUsForHelp(label = 'Contact us for help') %}
<details style="margin-top: 35px">

  <summary><span class="summary">{{ t(label) }}</span></summary>
  <div class="panel">
    <h2 class="heading-medium" style="margin-bottom:5px; margin-top: 10px;">Web chat</h2>
    <div id="ctsc-web-chat"></div>

    <h2 class="heading-medium" style="margin-bottom:5px; margin-top: 10px;">Email</h2>
    <pre><a href="mailto:mailto:moneyclaims@justice.gov.uk" target="_blank">moneyclaims@justice.gov.uk</a></pre>
    <pre>{{ t("We'll get back to you within 10 days.") }}</pre>

    <h2 class="heading-medium" style="margin-bottom:5px; margin-top: 10px;">Telephone</h2>
    <pre>{{ t('0300 123 7050') }}</pre>
    <pre>{{ t("Monday to Friday, 9am to 5pm") }}</pre>
    {{ _callCharges()}}

  </div>
</details>
{% endmacro %}
