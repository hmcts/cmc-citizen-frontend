{% extends "layout.njk" %}
{% from "support.njk" import supportWidget %}
{% from "internalLink.njk" import internalLink %}
{% from "externalLink.njk" import externalLink %}
{% set heading = 'Cookies' %}

{% set cookieResourseUri = 'https://www.aboutcookies.org' %}
{% set googlePrivacyPolicyUri = 'https://www.google.com/policies/privacy/partners/' %}
{% set optOutOfAnalyticsUri = 'https://tools.google.com/dlpage/gaoptout' %}

{% block content %}
  <div class="grid-row">
    <div class="column-two-thirds">

      <p>
        {{ t('A cookie is a small piece of data that’s stored on your computer, '
        + 'tablet, or phone when you visit a website. '
        + 'Most websites need cookies to work properly.') }}
      </p>

      <p> {{ t('How cookies are used in this service:') }}</p>

      <ul class="list list-bullet">
        <li>{{ t('measure how you use the service so it can be improved') }}</li>
        <li>{{ t('remember the notifications you’ve seen so that you’re not shown them again') }}</li>
        <li>{{ t('temporarily store the answers you give') }}</li>
      </ul>

      <p>
        {{ t('Find out more about ' + externalLink( 'how to manage cookies', cookieResourseUri )) | safe }}
      </p>

      <h2 class="heading-medium">{{ t('Cookies used to measure website usage') }}</h2>
      <p>
        {{ t('We use Google Analytics software to collect information about how you use this service. '
        + 'We do this to help make sure the service is meeting the needs of its users '
        + 'and to help us make improvements, for example improving site search.') }}
      </p>

      <p> {{ t('Google Analytics stores information about:') }}</p>

      <ul class="list list-bullet">
        <li>{{ t('the pages you visit') }}</li>
        <li>{{ t('how long you spend on each page') }}</li>
        <li>{{ t('how you got to the service') }}</li>
        <li>{{ t('what you click on while you’re visiting the service') }}</li>
      </ul>

      <p>
        {{ t('We allow Google to use or share our analytics data. You can find out more '
        + 'about how Google use this information in their ' + externalLink('Privacy Policy.', googlePrivacyPolicyUri)) | safe }}
      </p>

      <p>
        {{ t('You can ' + externalLink('opt out of Google Analytics', optOutOfAnalyticsUri)
        + 'if you do not want Google to have access to your information.') | safe }}
      </p>

      <p>{{ t('Google Analytics sets the following cookies:') }}</p>

      <table class="form-group">
        <thead>
        <tr>
          <th scope="col">{{ t('Cookie name') }}</th>
          <th scope="col">{{ t('What this cookie is for') }}</th>
          <th scope="col">{{ t('Expires after') }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>_ga</td>
          <td>
            {{ t('This helps us count how many people visit the service by tracking if you’ve visited before') }}
          </td>
          <td class="text-area">{{ t('2 years') }}</td>
        </tr>
        <tr>
          <td>_gat</td>
          <td>
            {{ t('Manages the rate at which page view requests are made') }}
          </td>
          <td class="text-area">{{ t('10 minutes') }}</td>
        </tr>
        <tr>
          <td>_gid</td>
          <td>
            {{ t('Identifies you to the service') }}
          </td>
          <td class="text-area">{{ t('24 hours') }}</td>
        </tr>
        </tbody>
      </table>

      <h2 class="heading-medium">{{ t('Cookies used to turn our introductory message off') }} </h2>

      <p>
        {{ t('You may see a welcome message when you first visit the service. '
        +'We’ll store a cookie so that your computer knows not to show this message again.') }}
      </p>

      <table class="form-group">
        <thead>
        <tr>
          <th scope="col">{{ t('Cookie name') }}</th>
          <th scope="col">{{ t('What this cookie is for') }}</th>
          <th scope="col">{{ t('Expires after') }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>seen_cookie_message</td>
          <td>
            {{ t('Saves a message to let us know that you’ve seen our cookie message') }}
          </td>
          <td class="text-area">{{ t('1 month') }}</td>
        </tr>
        </tbody>
      </table>

      <h2
        class="heading-medium">{{ t('Cookies used to store the answers you’ve given during your visit (known as a ‘session’)') }}
      </h2>

      <p>
        {{ t('Session cookies are stored on your computer as you travel through a website, '
        + 'and let the website know what you’ve seen and done so far. '
        + 'These are temporary cookies and are automatically deleted a short while after you leave the website.') }}
      </p>

      <table class="form-group">
        <thead>
        <tr>
          <th scope="col">{{ t('Cookie name') }}</th>
          <th scope="col">{{ t('What this cookie is for') }}</th>
          <th scope="col">{{ t('Expires') }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>SESSION_ID</td>
          <td>
            {{ t('Keeps track of your answers') }}
          </td>
          <td class="text-area">{{ t('When you close your browser') }}</td>
        </tr>
        <tr>
          <td>eligibility-check</td>
          <td>
            {{ t('Stores answers to eligibility questions') }}
          </td>
          <td class="text-area">{{ t('48 hours') }}</td>
        </tr>
        </tbody>
      </table>

      <h2 class="heading-medium">{{ t('Cookies used to identify you when you come back to the service') }}</h2>
      <p>{{ t('We use authentication cookies to identify you when you return to the service.') }}</p>

      <table class="form-group">
        <thead>
        <tr>
          <th scope="col">{{ t('Cookie name') }}</th>
          <th scope="col">{{ t('What this cookie is for') }}</th>
          <th scope="col">{{ t('Expires') }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>lang</td>
          <td>
            {{ t('Identifies your prefered language') }}
          </td>
          <td class="text-area">{{ t('When you close your browser') }}</td>
        </tr>
        </tbody>
      </table>

      <h2 class="heading-medium">{{ t('Cookies used to make the service more secure') }}</h2>
      <p>
        {{ t('We set cookies which prevent attackers from modifying the contents of the other cookies we set. '
        + 'This makes the service more secure and protects your personal information. ') }}
      </p>

      <table class="form-group">
        <thead>
        <tr>
          <th scope="col">{{ t('Cookie name') }}</th>
          <th scope="col">{{ t('What this cookie is for') }}</th>
          <th scope="col">{{ t('Expires') }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>_csrf</td>
          <td>
            {{ t('Helps protect against forgery') }}
          </td>
          <td class="text-area">{{ t('When you close your browser') }}</td>
        </tr>
        <tr>
          <td>ARRAfinnity</td>
          <td>
            {{ t('Protects your session from tampering') }}
          </td>
          <td class="text-area">{{ t('When you close your browser') }}</td>
        </tr>
        <tr>
          <td>state</td>
          <td>
            {{ t('Identifies you to the service and secures your authentication') }}
          </td>
          <td class="text-area">{{ t('When you close your browser') }}</td>
        </tr>
        </tbody>
      </table>

    </div>
  </div>
{% endblock %}
