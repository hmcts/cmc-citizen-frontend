{% macro tableStart( id, heading ) %}
  <fieldset id="{{ id }}" class="form-group">
    <p class="heading-medium bottom-border">{{ t( heading ) }}</p>
    <legend>
    <span class="visually-hidden">{{ t( heading ) }}</span>
  </legend>
{% endmacro %}

{% macro tableEnd() %}
  </fieldset>
{% endmacro %}

{% macro row( label, value, changeLink ) %}
  <div class="bottom-border">
    <div class="column-one-third">
      <span>{{ t( label ) }}</span>
    </div>
    <div class="column-one-third">
      <span>{{ value }}</span>
    </div>
    {% if changeLink %}
    <div class="column-one-third change-link-column">
      <a href="{{ changeLink | safe }}" class="bold">{{ t('Change') }}</a>
    </div>
    {% endif %}
  </div>
{% endmacro %}

{% macro rowWithMultipleValue( label, values, changeLink, bottomBorder = true) %}
  <div class="{% if bottomBorder %}bottom-border{% else %}no-bottom-border{% endif %}">
    <div class="column-one-third">
      <span class="">{{ t( label ) }}</span>
    </div>
    <div class="column-one-third">
       {% for value in values %}
        <span class="block">{{ value }}</span>
       {% endfor %}
    </div>
    {% if changeLink %}
    <div class="column-one-third change-link-column">
      <a href="{{ changeLink | safe }}" class="bold">{{ t('Change') }}</a>
    </div>
    {% endif %}
  </div>
{% endmacro %}


