{
  "name": "cmc-citizen-frontend",
  "version": "1.1.1",
  "private": true,
  "engines": {
    "node": ">=8.9.4 <=8.12.0"
  },
  "scripts": {
    "setup": "gulp sass copy-files",
    "start": "node server.js",
    "lint": "tsc --noEmit && tslint --project tsconfig.json && sass-lint -v -q",
    "test": "TS_NODE_TRANSPILE_ONLY=true NODE_ENV=mocha LOG_LEVEL=OFF mocha --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*' ! -path '*/routes/*') --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=citizen-frontend-unit",
    "test:routes": "TS_NODE_TRANSPILE_ONLY=true NODE_ENV=mocha LOG_LEVEL=OFF mocha --opts mocha.opts $(find src/test \\( -name '*.ts' \\) -path '*/routes/*') --timeout 10000 --reporter-options reportFilename=routes,inlineAssets=true,reportTitle=citizen-frontend-routes",
    "test:routes-parallel": "TS_NODE_TRANSPILE_ONLY=true NODE_ENV=mocha LOG_LEVEL=OFF mocha-parallel-tests --opts mocha.opts $(find src/test \\( -name '*.ts' \\) -path '*/routes/*') --timeout 10000 --reporter-options reportFilename=routes,inlineAssets=true,reportTitle=citizen-frontend-routes",
    "test:a11y": "TS_NODE_TRANSPILE_ONLY=true NODE_ENV=mocha LOG_LEVEL=ERROR mocha --exit --opts mocha.opts src/test/a11y/a11y.ts --timeout 60000 --reporter-options reportFilename=a11y,inlineAssets=true,reportTitle=citizen-frontend-a11y",
    "test:functional": "./bin/run-functional-tests.sh",
    "test:nsp": "nsp check",
    "test:coverage": "TS_NODE_TRANSPILE_ONLY=true NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --exit --timeout 8000 --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*')",
    "test:coverage-unit": "TS_NODE_TRANSPILE_ONLY=true NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*' ! -path '*/routes/*')",
    "test:codacy-upload": "cat ./coverage-report/lcov.info | codacy-coverage",
    "test:codecov-upload": "codecov -f ./coverage-report/lcov.info",
    "test:smoke": "./bin/run-smoke-tests.sh",
    "test:integration": "TS_NODE_TRANSPILE_ONLY=true codeceptjs run-multiple parallel --verbose --config default.conf.js --reporter mocha-multi",
    "test:integration-debug": "TS_NODE_TRANSPILE_ONLY=true codeceptjs run-multiple parallel --verbose --config default.conf.js",
    "test:cross-browser": "TS_NODE_TRANSPILE_ONLY=true codeceptjs run --verbose --config saucelabs.conf.js --reporter mocha-multi",
    "list-supported-browsers": "node -e 'Object.keys(require(\"@hmcts/cmc-supported-browsers\").supportedBrowsers).forEach(key => console.log(key))'",
    "sonar-scan": "sonar-scanner -Dsonar.projectName='CMC :: Citizen Frontend' -Dsonar.sources=src/main -Dsonar.tests=src/test -Dsonar.exclusions=src/main/public/** -Dsonar.typescript.lcov.reportPaths=coverage-report/lcov.info"
  },
  "dependencies": {
    "@hmcts/cmc-common-frontend": "^1.53.1",
    "@hmcts/cmc-draft-store-middleware": "^2.0.0",
    "@hmcts/cmc-validators": "^0.2.0",
    "@hmcts/draft-store-client": "^1.1.1",
    "@hmcts/info-provider": "^1.0.0",
    "@hmcts/nodejs-healthcheck": "^1.4.5",
    "@hmcts/nodejs-logging": "^3.0.0",
    "@hmcts/postcodeinfo-client": "^1.1.0",
    "@hmcts/requestretry": "^1.1.2",
    "@types/config": "^0.0.34",
    "@types/cookies": "^0.7.1",
    "@types/csurf": "^1.9.33",
    "@types/express": "^4.16.0",
    "@types/http-status-codes": "^1.0.29",
    "@types/i18next": "^12.1.0",
    "@types/i18next-express-middleware": "^0.0.33",
    "@types/i18next-sprintf-postprocessor": "^0.0.29",
    "@types/lodash": "^4.14.118",
    "@types/nock": "^9.3.0",
    "@types/node": "<10.0.0",
    "@types/nunjucks": "^3.1.0",
    "@types/request-promise-native": "^1.0.2",
    "@types/shortid": "^0.0.29",
    "applicationinsights": "^1.0.8",
    "body-parser": "^1.18.3",
    "build-url": "^1.3.2",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "classlist-polyfill": "^1.2.0",
    "config": "^3.0.1",
    "cookie-encrypter": "^1.0.1",
    "cookie-parser": "^1.3.3",
    "cookies": "^0.7.3",
    "csurf": "^1.9.0",
    "express": "^4.16.3",
    "govuk-elements-sass": "^3.1.3",
    "govuk_template_jinja": "0.24.1",
    "gulp": "^4.0.0",
    "helmet": "^3.15.0",
    "http-status-codes": "^1.1.6",
    "i18next": "^12.1.0",
    "i18next-conv": "^8.0.1",
    "i18next-express-middleware": "^1.7.1",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "jquery": "3.3.1",
    "js-base64": "^2.5.1",
    "lodash": "^4.17.11",
    "mime": "^2.4.0",
    "moment": "^2.23.0",
    "moment-precise-range-plugin": "^1.3.0",
    "nodelist-foreach-polyfill": "^1.2.0",
    "nunjucks": "^3.1.7",
    "nunjucks-numeral-filter": "0.0.2",
    "otp": "^0.1.3",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.3",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.5.0",
    "string.prototype.startswith": "^0.2.0",
    "to-boolean": "^1.0.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.1.6",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@hmcts/cmc-supported-browsers": "^1.0.1",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-spies": "^1.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "*",
    "@types/sinon-chai": "^3.2.1",
    "@types/supertest": "*",
    "HTML_CodeSniffer": "https://github.com/squizlabs/HTML_CodeSniffer/archive/2.0.7.tar.gz",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codacy-coverage": "3.2.0",
    "codeceptjs": "^2.0.2",
    "codecov": "^3.1.0",
    "debug": "^4.1.1",
    "gulp-livereload": "^4.0.1",
    "gulp-nodemon": "^2.4.2",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "husky": "^1.3.1",
    "jsonwebtoken": "^8.4.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi": "^1.0.1",
    "mocha-parallel-tests": "^2.0.5",
    "mochawesome": "^3.1.1",
    "mock-require": "^3.0.2",
    "nock": "^10.0.6",
    "nsp": "^3.0.0",
    "nyc": "^13.1.0",
    "pa11y": "^5.1.0",
    "randomstring": "^1.1.5",
    "sass-lint": "^1.10.2",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "sinon-express-mock": "^2.1.0",
    "sonarqube-scanner": "^2.1.2",
    "supertest": "^3.4.1",
    "tslint": "^5.12.0",
    "tslint-config-standard": "^8.0.1",
    "urlencode": "^1.1.0",
    "webdriverio": "^4.14.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/main"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/main/public"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "coverage-report",
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test && yarn test:routes"
    }
  }
}
