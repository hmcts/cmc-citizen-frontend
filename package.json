    "sass-lint": "^1.10.2",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0",
    "sinon-express-mock": "^1.3.0",
    "supertest": "^3.0.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1"
  }
}
