    "request-promise-native": "^1.0.3",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.3.0",
    "shortid": "^2.2.6",
    "to-boolean": "^1.0.0",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.2.0",
    "typescript": "^2.4.2",
    "uuid": "^3.0.1",
    "uuid-validate": "^0.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/chai-as-promised": "^0.0.31",
    "@types/chai-spies": "^0.0.0",
    "@types/mocha": "*",
    "@types/sinon-chai": "^2.7.28",
    "@types/supertest": "*",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "debug": "^3.0.0",
    "gulp": "^3.9.0",
    "gulp-livereload": "^3.8.0",
