{
  "name": "citizen-frontend",
  "version": "1.0.2",
  "private": true,
  "engines": {
    "node": ">=7.10.1"
  },
  "scripts": {
    "start": "./node_modules/.bin/ts-node -r tsconfig-paths/register src/main/server.ts",
    "setup": "gulp sass copy-files",
    "lint": "tslint --project tsconfig.json --type-check && sass-lint -v -q",
    "test": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) ! -path '*a11y*' ! -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=citizen-frontend-unit",
    "test:routes": "NODE_ENV=mocha LOG_LEVEL=OFF mocha --compilers ts:ts-node/register -r tsconfig-paths/register $(find src/test \\( -name '*.ts' -or -name '*.js' \\) -path '*/routes/*') --reporter mochawesome --reporter-options reportFilename=routes,inlineAssets=true,reportTitle=citizen-frontend-routes",
    "test:a11y": "NODE_ENV=mocha LOG_LEVEL=ERROR mocha --compilers ts:ts-node/register -r tsconfig-paths/register src/test/a11y --timeout 60000 --reporter mochawesome --reporter-options reportFilename=a11y,inlineAssets=true,reportTitle=citizen-frontend-a11y",
    "test:nsp": "nsp check",
    "precommit": "yarn lint",
    "prepush": "yarn test && yarn test:routes"
  },
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "^1.4.3",
    "@hmcts/nodejs-logging": "^1.2.0",
    "@types/config": "^0.0.32",
    "@types/csurf": "^1.9.33",
    "@types/express": "^4.0.35",
    "@types/http-status-codes": "^1.0.29",
    "@types/i18next": "^8.4.1",
    "@types/i18next-express-middleware": "^0.0.32",
    "@types/i18next-sprintf-postprocessor": "^0.0.29",
    "@types/lodash": "^4.14.52",
    "@types/nock": "^8.2.1",
    "@types/node": "^8.0.24",
    "@types/nunjucks": "^0.0.33",
    "@types/request-promise-native": "^1.0.2",
    "@types/shortid": "^0.0.29",
    "HTML_CodeSniffer": "https://github.com/squizlabs/HTML_CodeSniffer/archive/2.0.7.tar.gz",
    "body-parser": "^1.13.3",
    "build-url": "^1.0.9",
    "class-transformer": "^0.1.7",
    "class-validator": "^0.7.0",
    "cli": "^1.0.1",
    "config": "^1.24.0",
    "cookie-parser": "^1.3.3",
    "cookies": "^0.7.0",
    "csurf": "^1.9.0",
    "es6-promisify": "^5.0.0",
    "express": "^4.13.3",
    "govuk-elements-sass": "^3.0.2",
    "govuk_template_jinja": "0.22.3",
    "gulp-replace": "^0.6.1",
    "helmet": "^3.1.0",
    "http-status-codes": "^1.1.6",
    "i18next": "^8.4.3",
    "i18next-conv": "^4.0.3",
    "i18next-express-middleware": "^1.0.2",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "jquery": "3.0.0",
    "mime": "^1.3.4",
    "moment": "^2.18.1",
    "morgan": "^1.6.1",
    "nock": "^9.0.13",
    "nunjucks": "^3.0.0",
    "nunjucks-numeral-filter": "0.0.2",
