{
  "name": "cmc-citizen-frontend",
  "version": "1.1.1",
  "private": true,
  "engines": {
    "node": ">=8.9.4"
  },
  "scripts": {
    "setup": "gulp sass copy-files",
    "start": "node server.js",
    "lint": "tsc --noEmit && tslint --project tsconfig.json && sass-lint -v -q",
    "test": "TS_NODE_FAST=true NODE_ENV=mocha LOG_LEVEL=OFF mocha --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*' ! -path '*/routes/*') --reporter-options reportFilename=unit,inlineAssets=true,reportTitle=citizen-frontend-unit",
    "test:routes": "TS_NODE_FAST=true NODE_ENV=mocha LOG_LEVEL=OFF mocha --opts mocha.opts $(find src/test \\( -name '*.ts' \\) -path '*/routes/*') --timeout 4000 --reporter-options reportFilename=routes,inlineAssets=true,reportTitle=citizen-frontend-routes",
    "test:a11y": "TS_NODE_FAST=true NODE_ENV=mocha LOG_LEVEL=ERROR mocha --exit --opts mocha.opts src/test/a11y/a11y.ts --timeout 60000 --reporter-options reportFilename=a11y,inlineAssets=true,reportTitle=citizen-frontend-a11y",
    "test:functional": "./bin/run-functional-tests.sh",
    "test:nsp": "nsp check",
    "test:coverage": "TS_NODE_FAST=true NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --exit --timeout 8000 --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*')",
    "test:coverage-unit": "TS_NODE_FAST=true NODE_ENV=mocha LOG_LEVEL=OFF nyc mocha --opts mocha.opts $(find src/test \\( -name '*.ts' \\) ! -path '*a11y*' ! -path '*/routes/*')",
    "test:codacy-upload": "cat ./coverage-report/lcov.info | codacy-coverage",
    "test:codecov-upload": "codecov -f ./coverage-report/lcov.info",
    "test:smoke": "./bin/run-smoke-tests.sh",
    "test:integration": "TS_NODE_FAST=true ts-node --require tsconfig-paths/register ./node_modules/.bin/codeceptjs run --verbose --config default.conf.js --reporter mocha-multi",
    "test:integration-debug": "TS_NODE_FAST=true ts-node --require tsconfig-paths/register ./node_modules/.bin/codeceptjs run --verbose --config default.conf.js",
    "test:cross-browser": "TS_NODE_FAST=true ts-node --require tsconfig-paths/register ./node_modules/.bin/codeceptjs run --verbose --config saucelabs.conf.js --reporter mocha-multi",
    "list-supported-browsers": "node -e 'Object.keys(require(\"@hmcts/cmc-supported-browsers\").supportedBrowsers).forEach(key => console.log(key))'",
    "sonar-scan": "sonar-scanner -Dsonar.projectName='CMC :: Citizen Frontend' -Dsonar.sources=src/main -Dsonar.tests=src/test -Dsonar.exclusions=src/main/public/** -Dsonar.typescript.lcov.reportPaths=coverage-report/lcov.info",
    "precommit": "yarn lint",
    "prepush": "yarn test && yarn test:routes"
  },
  "dependencies": {
    "@hmcts/cmc-common-frontend": "^1.43.0",
    "@hmcts/cmc-draft-store-middleware": "^2.0.0",
    "@hmcts/draft-store-client": "^1.1.1",
    "@hmcts/info-provider": "^1.0.0",
    "@hmcts/nodejs-healthcheck": "^1.4.5",
    "@hmcts/nodejs-logging": "^2.2.0",
    "@hmcts/postcodeinfo-client": "^1.1.0",
    "@hmcts/requestretry": "^1.1.0",
    "@types/config": "^0.0.34",
    "@types/cookies": "^0.7.1",
    "@types/csurf": "^1.9.33",
    "@types/express": "^4.0.35",
    "@types/http-status-codes": "^1.0.29",
    "@types/i18next": "^8.4.1",
    "@types/i18next-express-middleware": "^0.0.32",
    "@types/i18next-sprintf-postprocessor": "^0.0.29",
    "@types/lodash": "^4.14.52",
    "@types/nock": "^9.1.0",
    "@types/node": "^9.3.0",
    "@types/nunjucks": "^3.0.0",
    "@types/request-promise-native": "^1.0.2",
    "@types/shortid": "^0.0.29",
    "applicationinsights": "^1.0.2",
    "body-parser": "^1.13.3",
    "build-url": "^1.0.9",
    "class-transformer": "^0.1.7",
    "class-validator": "^0.8.1",
    "classlist-polyfill": "^1.2.0",
    "config": "^1.24.0",
    "continuation-local-storage": "^3.2.1",
    "cookie-parser": "^1.3.3",
    "cookies": "^0.7.0",
    "csurf": "^1.9.0",
    "es6-promisify": "^5.0.0",
    "express": "^4.13.3",
    "govuk-elements-sass": "^3.0.2",
    "govuk_template_jinja": "0.23.0",
    "gulp": "^4.0.0",
    "helmet": "^3.1.0",
    "http-status-codes": "^1.1.6",
    "i18next": "^10.0.7",
    "i18next-conv": "^6.0.0",
    "i18next-express-middleware": "^1.0.2",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "jquery": "3.3.1",
    "js-base64": "^2.3.2",
    "mime": "^2.0.3",
    "moment": "^2.18.1",
    "nodelist-foreach-polyfill": "^1.2.0",
    "nunjucks": "^3.0.0",
    "nunjucks-numeral-filter": "0.0.2",
    "otp": "^0.1.3",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.3",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.3.0",
    "string.prototype.startswith": "^0.2.0",
    "to-boolean": "^1.0.0",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^3.1.1",
    "typescript": "^2.4.2",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@hmcts/cmc-supported-browsers": "^1.0.1",
    "@types/chai": "^4.0.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-spies": "^0.0.0",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mocha": "*",
    "@types/sinon-chai": "^2.7.28",
    "@types/supertest": "*",
    "HTML_CodeSniffer": "https://github.com/squizlabs/HTML_CodeSniffer/archive/2.0.7.tar.gz",
    "chai": "^4.1.1",
    "chai-as-promised": "^7.1.1",
    "codacy-coverage": "^2.0.3",
    "codeceptjs": "^1.1.6",
    "codecov": "^3.0.0",
    "debug": "^3.0.0",
    "gulp-livereload": "^3.8.0",
    "gulp-nodemon": "^2.0.2",
    "gulp-plumber": "^1.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-sass": "^3.1.0",
    "husky": "^0.14.3",
    "jsonwebtoken": "^8.0.1",
    "mocha": "^5.0.3",
    "mocha-junit-reporter": "^1.17.0",
    "mocha-multi": "^1.0.1",
    "mochawesome": "^3.0.2",
    "mock-require": "^2.0.1",
    "nock": "^9.0.22",
    "nsp": "^3.0.0",
    "nyc": "^11.2.1",
    "pa11y": "^4.6.0",
    "randomstring": "^1.1.5",
    "sass-lint": "^1.10.2",
    "sinon": "^5.0.0",
    "sinon-chai": "^3.0.0",
    "sinon-express-mock": "^2.0.0",
    "sonarqube-scanner": "^2.0.1",
    "supertest": "^3.0.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^7.0.0",
    "webdriverio": "^4.11.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/main"
    ],
    "exclude": [
      "**/*.d.ts",
      "src/main/public"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "report-dir": "coverage-report",
    "all": true
  }
}
