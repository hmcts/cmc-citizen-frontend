#!groovy

@Library("Infrastructure@feature/add-slack-integration")

def product = "cmc"
def component = "citizen-frontend"

withPipeline("nodejs", product, component) {
  after('checkout') {
    echo 'citizen-frontend checked out'
  }

  after('build') {
    sh 'yarn setup'
  }

  onSuccess {
    echo '<<<<<< Success'
  }

  onFailure {
    echo '>>>>>> Failed'
  }

  enableSlackNotifications('#cmc-tech-notifications')
}
